<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Nullable>enable</Nullable>
        <RootNamespace>FPLite.Extensions</RootNamespace>
        <PackageId>PauloJDCM.FPLite.Extensions</PackageId>
        <Version>4.0.0</Version>
        <Authors>Paulo Miranda</Authors>
        <Product>FPLite.Extensions</Product>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/PauloJDCM/FPLite</RepositoryUrl>
        <PackageIcon>FPLite_Extensions.png</PackageIcon>
        <PackageReleaseNotes>Updated to use remodeled types. Removed functionality that didn't really add much. Dropped support for .Net Standard.</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\FPLite\FPLite.csproj"/>
        <None Include="LICENSE.txt" Pack="true" PackagePath="LICENSE.txt"/>
        <None Include="README.md" Pack="true" PackagePath="README.md"/>
        <None Include="FPLite_Extensions.png" Pack="true" PackagePath="FPLite_Extensions.png"/>
    </ItemGroup>

</Project>
